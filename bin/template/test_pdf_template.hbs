<html>

	<head>
		<meta charest="utf-8" />
		<style>
			body { font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
			line-height: 1.6; font-size: 16px; } ul { list-style-type: none; margin:
			0; padding: 0; } li+li { margin-top: 1em; } img { max-width: 100%;
			min-height: 1em; height: auto; display: inline-block; vertical-align:
			middle!important; margin: 0 5px 3px 5px;} h3 { display: inline-block; } p
			{ display: inline; margin: 0; padding: 0; } .choice + .choice {
			margin-top: 0.5em; } .result { padding: 1em; border: 1px solid #ccc;
			border-radius: 10px; position: relative;} .result span.result-header {
			position: absolute; top: -.8em; left: 1em; background: #fff; padding: 0
			0.5em; border: 1px solid #ccc; border-radius: 5px; color: #333;} .answer {
			margin-top: .5em; } .key { font-size: 1.2em; } .choice { margin-top:
			0.5em; } .choice b { font-size: 1.2em; } .title { text-align: center;
			font-size: 20px; } .content { text-align: left; }
		</style>

	</head>

	<body>
		<ul>
			{{#each data}}
				{{#if this.title}}
					<h1 class="title">{{this.title}}</h1>
				{{/if}}
				{{#if this.content}}
					<div class="content">
						{{{this.content}}}
					</div>
				{{/if}}
				<br />
				<li>
					{{#each this.listQuestion}}
						<div>
							<h3>{{this.order}}.</h3>
							{{{this.questionText}}}
						</div>
						{{#if this.a}}
							<div class="choice"><b>A. </b>{{{this.a}}}</div>
						{{/if}}
						{{#if this.b}}
							<div class="choice"><b>B. </b>{{{this.b}}}</div>
						{{/if}}
						{{#if this.c}}
							<div class="choice"><b>C. </b>{{{this.c}}}</div>
						{{/if}}
						{{#if this.d}}
							<div class="choice"><b>D. </b>{{{this.d}}}</div>
						{{/if}}
						{{#if this.e}}
							<div class="choice"><b>E. </b>{{{this.e}}}</div>
						{{/if}}
						<br />
						{{#if this.plans}}
							<ul>
								{{#each this.plans}}
									<li>{{lookup "abcdefghijklmnopqrstuvwxyz" @index}})
										{{{this.content}}}</li>
								{{/each}}
							</ul>
						{{/if}}
						<div class="result">
							<span class="result-header">Lời giải</span>
								{{#if this.fillKey}}
								<div class="key">
										<b>Đáp án: </b>{{this.fillKey}}
								</div>
								{{else}}
									{{#if this.key}}
									<div class="key">
											<b>Đáp án: </b>{{{this.key}}}
									</div>
									{{/if}}
								{{/if}}
								{{#if this.answer}}
								<div class="answer">
									{{{this.answer}}}
								</div>
								{{/if}}
							</div>
						</div>
					{{/each}}
				</li>
				<br />
			{{/each}}
		</ul>
	</body>
</html>